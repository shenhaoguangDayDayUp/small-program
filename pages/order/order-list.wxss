/* pages/order/order-list.wxss */
@import '../../templates/order-list/index.wxss';
.nav-tab {
  width: 100%;
  height: 100rpx;
  background-color: #23262b;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1600;
}
.nav-tab-content {
  position: relative;
  white-space: nowrap;
  height: 100rpx;
  width: 100%;
  z-index: 3000;
}

.nav-tab-item {
  height: 100rpx;
  width: 33.333%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}

.nav-tab-item-sel {
  color:rgb(253, 205, 0);
 
}

.nav-tab-line {
  position: absolute;
  height: 4rpx;
  width: 20%;
  left: 0;
  bottom: 0;
  z-index: 3001;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-tab-line-data {
  width: 100%;
  height: 4rpx;
  background-color:rgb(253, 205, 0);
}
.tab__line--animate {
  transition: left 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);
}
