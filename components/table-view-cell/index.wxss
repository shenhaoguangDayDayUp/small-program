.sd__table--cell {
  width: 100%;
  height: 100%;
  position: relative;
  box-sizing: border-box;
}
.sd__table--cell-content {
  position: relative;
  z-index: 10;
    box-sizing: border-box;
}
.sd__table--cell-bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: red;
  z-index: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 32rpx;
  color: #fff;
    box-sizing: border-box;
}
.sd__table--cell-bg view {
  width: 200rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
    box-sizing: border-box;
}