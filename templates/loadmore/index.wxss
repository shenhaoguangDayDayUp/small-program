.sd__load__more {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #666;
  position: relative;
}
.sd__load__more-nomore {
  line-height: 100rpx;
}
.sd__load__more-line {
  position: absolute;
  left: 60rpx;
  right: 60rpx;
  top: 50%;
  border-top: 1px solid #e7e7e7;
}
.sd__load__more__text {
  position: relative;
  z-index: 100;
  background-color: #f7f7f7;
  padding: 0 40rpx;
}