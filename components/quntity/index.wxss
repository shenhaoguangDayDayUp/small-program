.sd__quantity {
  width: 164rpx;
  height: 52rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  box-sizing: border-box;
}
.sd__quantity::before {
  content: ' ';
  position: absolute;
  left: 0;
  top: 0;
  width: 200%;
  height: 200%;
  /* border: 1px solid #ccc;
  transform: scale(0.5);
  transform-origin: 0 0; */
}
.sd__quantity__btn {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  position: relative;
}
.sd__quantity__btn-hightlighted {
  background-color: rgba(40, 40, 40, 0.1);
}
.sd__quantity__btn .icon {
  width: 30rpx;
  height: 30rpx;
}
.sd__quantity__input {
  position: relative;
  height: 100%;
  flex: 1;
  font-size: 24rpx;
  /* color: #262626; */
  box-sizing: border-box;
  text-align: center;
  vertical-align: middle;
  line-height: 1.0;
}
.sd__quantity__input::before {
  content: ' ';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  /* border-left: 1px solid #ccc;
  transform: scaleX(0.5);
  transform-origin: 0 0; */
}
.sd__quantity__input::after {
  content: ' ';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  /* border-right: 1px solid #ccc;
  transform: scaleX(0.5);
  transform-origin: 0 0; */
}
